{
  "name": "module-10-fullstack-integration",
  "version": "1.0.0",
  "description": "Complete fullstack integration with production deployment and monitoring",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --watchAll=false",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run lint && npm run test:ci",
    "docker:build": "docker build -t mood-todo-final .",
    "docker:run": "docker run -p 3000:3000 mood-todo-final",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy": "npm run build && npm run docker:build",
    "seed": "node scripts/seeder.js",
    "migrate": "node scripts/migrate.js",
    "backup": "node scripts/backup.js",
    "start:client": "cd client && npm start",
    "start:all": "concurrently \"npm run dev\" \"npm run start:client\""
  },
  "keywords": ["nodejs", "express", "mongodb", "todo", "mood", "fullstack"],
  "author": "Module 10 Integration",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "redis": "^4.6.8",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "express-fileupload": "^1.4.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "@types/jest": "^29.5.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "selenium-webdriver": "^4.11.1",
    "concurrently": "^8.2.0",
    "chromedriver": "^116.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metana-bootcamp/mood-todo-app.git"
  },
  "bugs": {
    "url": "https://github.com/metana-bootcamp/mood-todo-app/issues"
  },
  "homepage": "https://github.com/metana-bootcamp/mood-todo-app#readme"
}