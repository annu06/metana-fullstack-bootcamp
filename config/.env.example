# Environment Configuration Template
# Copy this file to .env and update the values for your environment
# NEVER commit the actual .env file to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=production

# Application port
PORT=3000

# Application name and version
APP_NAME="My Full-Stack App"
APP_VERSION=1.0.0

# Application URL (used for CORS, redirects, etc.)
APP_URL=https://yourdomain.com

# API base URL
API_BASE_URL=https://yourdomain.com/api

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://myapp_user:secure_password@localhost:5432/myapp_production

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Database SSL (true/false)
DB_SSL=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long

# JWT Expiration times
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Secret (generate with: openssl rand -base64 64)
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters-long

# Session settings
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Password hashing rounds (10-12 recommended)
BCRYPT_ROUNDS=12

# CORS settings
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# General rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API rate limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000

# Auth rate limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email settings
EMAIL_FROM="My App <noreply@yourdomain.com>"
EMAIL_REPLY_TO=support@yourdomain.com

# SendGrid (alternative to SMTP)
# SENDGRID_API_KEY=SG.your-sendgrid-api-key

# =============================================================================
# THIRD-PARTY API KEYS
# =============================================================================

# Stripe (Payment Processing)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# AWS Services
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Google Services
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Social Media APIs
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379

# Redis settings
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=myapp:

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600
SESSION_STORE_TTL=86400

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Upload limits
MAX_FILE_SIZE=10485760
MAX_FILES=10

# Upload paths
UPLOAD_PATH=/var/www/html/myapp/uploads
TEMP_PATH=/tmp/uploads

# Allowed file types
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file paths
LOG_FILE=/var/log/myapp/app.log
ERROR_LOG_FILE=/var/log/myapp/error.log
ACCESS_LOG_FILE=/var/log/myapp/access.log

# Log rotation
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Enable metrics collection
ENABLE_METRICS=true

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# New Relic (Performance Monitoring)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=My App Production

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_SOCIAL_LOGIN=true
ENABLE_API_DOCS=false
ENABLE_MAINTENANCE_MODE=false

# =============================================================================
# WEBHOOK SETTINGS
# =============================================================================

# Webhook URLs for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# S3 backup settings
BACKUP_S3_BUCKET=your-backup-s3-bucket
BACKUP_S3_REGION=us-east-1

# =============================================================================
# SSL/TLS SETTINGS
# =============================================================================

# SSL certificate paths (for Let's Encrypt)
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# Force HTTPS
FORCE_HTTPS=true

# HSTS settings
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# =============================================================================
# DEVELOPMENT SETTINGS (only for development environment)
# =============================================================================

# Debug settings
DEBUG=app:*
VERBOSE_LOGGING=false

# Development database
# DATABASE_URL=postgresql://username:password@localhost:5432/myapp_development

# Development email (use Ethereal or MailHog)
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASS=

# =============================================================================
# TESTING SETTINGS (only for test environment)
# =============================================================================

# Test database
# TEST_DATABASE_URL=postgresql://username:password@localhost:5432/myapp_test

# Disable external services in tests
# DISABLE_EMAILS=true
# DISABLE_WEBHOOKS=true
# DISABLE_ANALYTICS=true

# =============================================================================
# CUSTOM APPLICATION SETTINGS
# =============================================================================

# Add your custom environment variables here
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2

# Business logic settings
# MAX_USERS_PER_ORGANIZATION=100
# FREE_TRIAL_DAYS=14
# SUBSCRIPTION_GRACE_PERIOD_DAYS=3

# Integration settings
# WEBHOOK_TIMEOUT=30000
# API_TIMEOUT=10000
# EXTERNAL_API_RETRY_ATTEMPTS=3